<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardView_layout_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/recipe_image_id"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_launcher_background"
            tools:background="@drawable/ic_launcher_background"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recipe_image_id"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Cream n Treat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textview_size"/>

        <TextView
            android:id="@+id/recipe_serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recipe_image_id"
            android:layout_below="@+id/recipe_title"
            android:gravity="center_horizontal"
            android:text="Serving size"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textview_size"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>